<% title("Dashboard - #{community_name}") %>

<header class="crayons-layout">
  <h1 class="p-2 pb-0 m:p-0 crayons-title">Dashboard &raquo; Audio uploads</h1>
  <%= render "dashboards/actions_mobile" %>
</header>

<div class="crayons-layout crayons-layout--2-cols">
  <aside class="crayons-layout__sidebar-left">
    <%= render "dashboards/actions" %>
  </aside>

  <div class="crayons-layout__content mb-5" id="user-dashboard">
    <%= render "shared/audio_upload" %>
    <div class="crayons-card p-6" data-controller="image-upload">
      <h2 class="crayons-title mb-4">Approved tracks</h2>
      <%= render partial: 'audios/audios_table', locals: {audios: @audios} %>
      <h2 class="crayons-title mb-4">Pending tracks</h2>
      <%= render partial: 'audios/audios_table', locals: {audios: @pending_audios} %>
    </div>
  </div>
</div>
