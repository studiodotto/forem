<style>
  .crayons-table thead th {
    width: 10%;
  }
  .crayons-table tbody td {
    width: 10%;
  }
  .width-40 {
    width: 40% !important;
  }
  .width-5 {
    width: 5% !important;
  }
</style>
<table class="crayons-table" width="100%">
  <thead>
  <tr>
    <th scope="col" class="width-5">ID</th>
    <th scope="col">User</th>
    <th scope="col" class="width-40">Link</th>
    <th scope="col">Status</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody class="crayons-card">
  <% @audios.each do |audio| %>
    <tr>
      <td class="width-5"><%= link_to audio.id, edit_admin_audio_path(audio) %></td>
      <td><%= audio.user.name %></td>
      <td class="width-40"><a href="<%= audio.link %>"><%= audio.link %></a></td>
      <td><%= audio.status.present? ? "<span class ='badge badge-success'>Approved</span>".html_safe : "<span class ='badge badge-danger'>Rejected</span>".html_safe %></td>
      <td>
        <% if audio.status.present? %>
          <%= link_to "Reject", admin_audio_path(id: audio.id, status: 'reject'), method: :put, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to "Approve", admin_audio_path(id: audio.id, status: 'approve'), method: :put, class: 'btn btn-success' %>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
