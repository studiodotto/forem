<style>
  .artist_applications-new{
    background: #28292D !important;
  }
  .text-color-white{
    color: white;
  }
  .text-centered{
    text-align: center
  }
  .start-now-btn{
    color: black;
    /*height: 3rem;*/
    background: #FED853 !important;;
    border: 1px solid #FED853 !important;;
    box-sizing: border-box !important;
    border-radius: 0px 4.8px 4.8px 0px !important;
  }
  .signup-field{
    width: 50%;
    padding: 12px;
    background: #FFFFFF;
    border: 1px solid #FED853;
    box-sizing: border-box;
    box-shadow: 0px 0px 0px rgba(19, 126, 255, 0.25);
    border-radius: 4.8px 0px 0px 4.8px;
  }
  .margin-for-password-field{
    margin-top: 1.8rem;
  }
  .svg-logo{
    position: relative;
    right: 20px;
    top: 15px;
  }
  .text-below-p{
    font-family: 'Roboto', sans-serif;
    font-style: normal;
    font-weight: normal;
    font-size: 27px;
    line-height: 40px;
    text-align: center;
    color: #FFFFFF;
    flex: none;
    order: 1;
    flex-grow: 0;
    margin: 0px 25px;
  }
  .header-p{
    font-family: 'Roboto', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 48px;
    line-height: 56px;
    text-align: center;
    letter-spacing: 0.03em;
    color: #FFFFFF;
    flex: none;
    order: 0;
    flex-grow: 0;
    margin: 0px 25px;
  }
  .footer-p{
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 19px;
    text-align: center;
    color: #FFFFFF;
    flex: none;
    order: 5;
    flex-grow: 0;
    margin: 0px 25px;
  }
</style>
<div class="container-fluid" style="background: #28292D; width: 100%; height: 810px;">
  <div class="container" style="background: #28292D; width: 1000px !important;">
    <% if flash[:artist_error].present? %>
      <div class="alert alert-danger" style="text-align: center">
        <% if flash[:artist_error].is_a?(String) %>
          <%= flash[:artist_error] %> sadas
        <% else %>
        <ul style="list-style-type: none;">
          <% flash[:artist_error].each do |a| %>
            <li><%= a %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
    <% end %>
    <% unless flash[:artist_success].present? %>
      <div class="row">
        <p class="text-color-white text-centered" style="font-size: 2rem; margin-top: 11%">
